{
  "name": "virtual-power-supply-backend",
  "version": "1.0.0",
  "description": "Simple backend server for energy power supply in the market. That provides APIs for IoT devices to connect and manage",
  "main": "app/app.js",
  "scripts": {
    "format-staged": "pretty-quick --staged",
    "start": "node bin/app",
    "test": "jest --forceExit --color",
    "prettier-check": "prettier-check \"app/**/*.js\"",
    "eslint-check": "eslint --print-config . | eslint-config-prettier-check && eslint --ext .js app/",
    "fix-lint": "npm run eslint-check -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hsnbilgen/virtual-power-supply-backend.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hsnbilgen/virtual-power-supply-backend/issues"
  },
  "homepage": "https://github.com/hsnbilgen/virtual-power-supply-backend#readme",
  "dependencies": {
    "axios": "^0.27.2",
    "dotenv-safe": "^8.2.0",
    "express": "^4.18.1",
    "jest": "^28.1.0",
    "swagger-routes-express": "^3.3.1",
    "yamljs": "^0.3.0"
  },
  "nyc": {
    "check-coverage": true,
    "include": [
      "app/**/*.js"
    ],
    "exclude": [
      "**/node_modules/**",
      "**/_mocks_/**",
      "**/__mocks__/**"
    ],
    "ignore-class-method": "methodToIgnore",
    "reporter": [
      "lcov",
      "html",
      "text-summary"
    ],
    "report-dir": "./tests/coverage"
  },
  "eslintIgnore": [
    "**/__mocks__/**",
    "**/__snapshots__/**",
    "**/__tests__/**"
  ],
  "devDependencies": {
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.2.2",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.6.2",
    "prettier-check": "^2.0.0",
    "pretty-quick": "^3.1.3"
  }
}
